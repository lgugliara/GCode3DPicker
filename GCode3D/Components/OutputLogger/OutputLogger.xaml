<UserControl x:Class="GCode3D.Components.OutputLoggerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    Background="Transparent">

    <!-- Completed Instructions Output -->
    <Border Grid.Row="1" CornerRadius="12" Height="300" Background="#eeeeee" Margin="10">
        <ListBox ItemsSource="{Binding Current}" BorderThickness="0" Background="Transparent">
    
            <!-- Program Line Template -->
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border CornerRadius="10" Margin="5, 2, 5, 2">
                                    <Label Grid.Column="1" Margin="5" Content="{Binding .}" Foreground="#272537" FontSize="14" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Border>
</UserControl>